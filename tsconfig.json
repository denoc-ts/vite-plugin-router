{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "examples",
        "dist"
    ]
}
